<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_theme" parent="tab_base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">@color/action_bar</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/accent</item>
        <item name="android:navigationBarColor">@color/action_bar</item>
    </style>

    <style name="splash_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/accent</item>
        <item name="android:navigationBarColor">@color/action_bar</item>
    </style>

</resources>